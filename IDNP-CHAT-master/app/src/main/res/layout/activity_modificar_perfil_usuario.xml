<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10sp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/fotoModificarPerfil"
                android:layout_width="150sp"
                android:layout_height="150sp"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Click para cambiar tu foto de perfil"/>

            <EditText
                android:id="@+id/idModificarNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre" />

            <EditText
                android:id="@+id/idModificarCorreo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Correo"
                android:inputType="textEmailAddress"
                android:clickable="false"/>

            <EditText
                android:id="@+id/idModificarContrase単a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contrase単a"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/idModificarContrase単aRepetida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Repetir contrase単a"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/txtModificarFechaDeNacimiento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Fecha de Nacimiento"
                android:inputType="date"
                android:clickable="false"
                android:focusable="false"/>

            <RadioGroup
                android:id="@+id/rgModificarGenero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:clickable="false">
                <RadioButton
                    android:id="@+id/rdModificarHombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Hombre"
                    android:layout_weight="1"
                    android:checked="true"/>
                <RadioButton
                    android:id="@+id/rdModificarMujer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Mujer"
                    android:layout_weight="1"/>
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Datos de la Tarjeta"/>

            <EditText
                android:id="@+id/idModificarNombreTarjeta"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre en la tarjeta"
                android:inputType="text" />

            <EditText android:id="@+id/idModificarNumeroTarjeta"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:hint="Numero de la tarjeta"
                android:inputType="text" />

            <RadioGroup
                android:id="@+id/rgTarjeta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rdModificarVisa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="VISA"
                    android:layout_weight="1"
                    android:checked="true"/>
                <RadioButton
                    android:id="@+id/rdModificarMasterCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="MasterCard"
                    android:layout_weight="1"/>
                <RadioButton
                    android:id="@+id/rdModificarScotiabank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Scotiabank"
                    android:layout_weight="1"/>
            </RadioGroup>

            <EditText
                android:id="@+id/txtModificarFechaDeCaducidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Fecha de Caducidad"
                android:inputType="date"
                android:clickable="true"
                android:focusable="false"/>

            <EditText
                android:id="@+id/idModificarRegistroCVV"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="CVV"
                android:inputType="text" />

            <Button
                android:id="@+id/idModificar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#57BBE9"
                android:drawablePadding="6dp"
                android:enabled="true"
                android:paddingLeft="15dip"
                android:paddingRight="15dip"
                android:textAlignment="center"
                android:hint="Guardar Cambios" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>